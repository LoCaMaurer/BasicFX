<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginScreen">
   <top>
      <Label fx:id="label_Version" text="Version 1.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="textfield_username" promptText="username" />
            <PasswordField fx:id="textfield_password" promptText="password" />
         </children>
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="button_login" mnemonicParsing="false" onAction="#login" text="Login" />
            <Button fx:id="button_createAccount" mnemonicParsing="false" onAction="#createAccount" text="Create Account" />
         </children>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</BorderPane>
